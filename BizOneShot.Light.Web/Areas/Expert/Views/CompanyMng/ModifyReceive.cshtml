@model BizOneShot.Light.Models.ViewModels.DataRequstViewModels

@{
    Layout = "~/Areas/Expert/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz > a.navi_expert01').addClass('on');
        //Accounting menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_RcvData').addClass('on');

    });

</script>

<div id="sub_rightwrap">

    <div class="sub_right_title specialist_01_02_02"><em>답변 작성하기</em></div>
    @using (Html.BeginForm("ModifyReceive", "CompanyMng", FormMethod.Post, new { area = "Expert", @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(model => model.ReqDocSn)
        <div class="tablewrap">
            <table>
                <colgroup>
                    <col width="100px">
                    <col width="260px">
                    <col width="100px">
                    <col width="150px">
                    <col width="140px">
                </colgroup>
                <tr>
                    <th>기업명</th>
                    <td colspan="4">@Model.SenderComNm</td>
                </tr>
                <tr>
                    <th>사업자번호</th>
                    <td colspan="4">@Model.SenderRegistrationNo</td>
                </tr>
                <tr>
                    <th>요청일자</th>
                    <td colspan="4">@Model.ReqDt.GetValueOrDefault().ToShortDateString()</td>
                </tr>
                <tr>
                    <th>제목</th>
                    <td colspan="4">@Model.ReqSubject</td>
                </tr>
                <tr>
                    <th>내용</th>
                    <td colspan="4" class="read">@Html.RepladeHtmlText(Model.ReqContents)</td>
                </tr>
            </table>
        </div><!--tablewrap//-->

        <div class="line_dot20"></div>

        <div class="tablewrap">
            <!--답변-->
            <table>
                <colgroup>
                    <col width="105px">
                    <col width="645px">
                </colgroup>
                <tr>
                    <th rowspan="2">답변</th>
                    <td class="reply">
                        @Html.TextAreaFor(model => model.ResContents)
                    </td>
                </tr>
                <tr>
                    <td class="nopad">
                        <div id="file_upwrap">
                            <ul>
                                <li>
                                    <!--파일1-->
                                    <input type="" class="file" /><button type="button" class="file_search" value="찾아보기"></button><button type="button" class="file_add" value="파일추가"></button><button type="button" class="file_del" value="파일삭제"></button>
                                </li>
                                <li>
                                    <!--파일2-->
                                    <input type="" class="file" />
                                    <button type="button" class="file_search" value="찾아보기"></button>
                                    <button type="button" class="file_add" value="파일추가"></button>
                                    <button type="button" class="file_del" value="파일삭제"></button>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            </table>
        </div><!--tablewrap//--><!--답변 끝-->

        <div id="btnwrap_sub">
            <div class="rightwrap">
                <button type="submit" class="reply_submit rightmargin" value="답변 전송" ></button>
                <a href="@Url.Action("ReceiveList", "CompanyMng")" class="list2 right"><em>목록</em></a>
            </div>
        </div>

    }
</div><!--custom_rightwrap//-->