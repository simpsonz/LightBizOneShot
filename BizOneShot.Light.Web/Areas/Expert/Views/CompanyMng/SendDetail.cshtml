@model BizOneShot.Light.Models.ViewModels.DataRequstViewModels

@{
    Layout = "~/Areas/Expert/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz > a.navi_expert01').addClass('on');
        //Accounting menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_SndData').addClass('on');

    });

</script>

<div id="sub_rightwrap">

    <div class="sub_right_title biz030302"><em>자료요청 발신함 상세보기</em></div>

    <div class="tablewrap">
        <p class="cap_title">발신요청</p>
        <table>
            <colgroup>
                <col width="100px" />
                <col width="260px" />
                <col width="100px" />
                <col width="150px" />
                <col width="140px" />
            </colgroup>
            <tr>
                <th>수신자</th>
                <td>@Model.ReceiverName</td>
                <th>요청일자</th>
                <td colspan="2">@Model.ReqDt.GetValueOrDefault().ToShortDateString()</td>
            </tr>
            <tr>
                <th>제목</th>
                <td colspan="4">@Model.ReqSubject</td>
            </tr>
            <tr>
                <th>내용</th>
                <td colspan="4" class="read">@Model.ReqContents</td>
            </tr>
            <tr>
                <!--첨부파일1개일때-->
                <th>첨부파일</th>
                <td colspan="4" class="nopad">
                    <div id="file_downwrap">
                        <ul>
                            <li><span>첨부파일1개.pdf</span><button type="button" class="file_down" value="다운로드"></button></li>
                        </ul>
                    </div>
                </td>
            </tr><!--첨부파일1개일때 끝-->
            <tr>
                <!--첨부파일2개이상일때-->
                <th>첨부파일</th>
                <td colspan="3" class="nopad">
                    <div id="file_downwrap">
                        <ul>
                            <li><span>첨부파일2개이상.pdf</span><button type="button" class="file_down" value="다운로드"></button></li>
                            <li><span>첨부파일2개이상.pdf</span><button type="button" class="file_down" value="다운로드"></button></li>
                        </ul>
                    </div>
                </td>
                <td class="all"><button type="button" class="file_all_down" value="전체 다운로드"></button></td>
            </tr><!--첨부파일2개이상일때 끝-->
        </table>
    </div><!--tablewrap//-->

    <div class="line_dot20"></div>

    <div class="tablewrap">
        <!--답변-->
        <p class="cap_title">답변</p>
        <table>
            <colgroup>
                <col width="100px" />
                <col width="510px" />
                <col width="140px" />
            </colgroup>
            <tr>
                <th>답변일자</th>
                <td colspan="2">@Model.ResDt.GetValueOrDefault().ToShortDateString()</td>
            </tr>
            <tr>
                <th>답변</th>
                <td colspan="2" class="read">@Html.RepladeHtmlText(Model.ResContents)</td>
            </tr>
            <tr>
                <!--첨부파일1개일때-->
                <th>첨부파일</th>
                <td colspan="2" class="nopad">
                    <div id="file_downwrap">
                        <ul>
                            <li><span>첨부파일1개.pdf</span><button type="button" class="file_down" value="다운로드"></button></li>
                        </ul>
                    </div>
                </td>
            </tr><!--첨부파일1개일때 끝-->
            <tr>
                <!--첨부파일2개이상일때-->
                <th>첨부파일</th>
                <td class="nopad">
                    <div id="file_downwrap">
                        <ul>
                            <li><span>첨부파일2개이상.pdf</span><button type="button" class="file_down" value="다운로드"></button></li>
                            <li><span>첨부파일2개이상.pdf</span><button type="button" class="file_down" value="다운로드"></button></li>
                        </ul>
                    </div>
                </td>
                <td class="all"><button type="button" class="file_all_down" value="전체 다운로드"></button></td>
            </tr><!--첨부파일2개이상일때 끝-->
        </table>
    </div><!--tablewrap//-->

    <div id="btnwrap_sub">
        <div class="rightwrap">
            <a href="@Url.Action("SendList","CompanyMng")" class="list2 right"><em>목록</em></a>
        </div>
    </div>

</div><!--custom_rightwrap//-->