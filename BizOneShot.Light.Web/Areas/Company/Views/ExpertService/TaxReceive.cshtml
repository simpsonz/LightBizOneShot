@{
    Layout = "~/Areas/Company/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz > a.navi_biz05').addClass('on');
        //Accounting menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_tax').addClass('on');
    });
</script>
<div id="sub_rightwrap">
    <div class="sub_right_title expert_receive"><em>자료요청 수신함</em></div>

    <div id="tabswrap_three" class="tab01">
        <!--기업별 조회 목록 탭-->
        <ul>
            <li><a href="" class="on">수신함</a></li>
            <li><a href="">발신함</a></li>
            <li><a href="">문의등록</a></li>
        </ul>
    </div>


    <div class="tablewrap">
        <!--검색결과-->
        <table>
            <colgroup>
                <col width="10%">
                <col width="45%">
                <col width="12%">
                <col width="16%">
                <col width="16%">
            </colgroup>
            <tr>
                <th class="topcen">번호</th>
                <th class="topcen">제목</th>
                <th class="topcen">발송자</th>
                <th class="topcen">요청일자</th>
                <th class="topcen">답변일자</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@item.NTC_SN</td>*@
                    <td class="left">@Html.ActionLink(item.Subject, "NoticeDetail", new { noticeSn = item.NoticeSn })</td>
                    <td>@item.RegDt.Value.ToShortDateString()</td>
                </tr>
                <tr>
                    <td class="center">1</td>
                    <td class="center"></td>
                    <td class="center"></td>
                    <td class="center"></td>
                    <td class="center"></td>
                </tr>
            }
            @if (Model.TotalItemCount == 0)
            {
                <tr>
                    <td colspan="5" style="text-align:center;">검색 결과가 없습니다.</td>
                </tr>
            }
            
        </table>
    </div><!--tablewrap//-->
    <div class="page_num_wrap">
        <div class="page_num">
            <ul>
                <li><input type="button" class="first" value="첫페이지"></li>
                <li><input type="button" class="pre" value="이전 페이지"></li>
                <li class="on">1<span>l</span></li>
                <li><a href="">2</a><span>l</span></li>
                <li><a href="">3</a><span>l</span></li>
                <li><a href="">4</a><span>l</span></li>
                <li><a href="">5</a><span>l</span></li>
                <li><a href="">6</a><span>l</span></li>
                <li><a href="">7</a><span>l</span></li>
                <li><a href="">8</a><span>l</span></li>
                <li><a href="">9</a><span>l</span></li>
                <li><a href="">10</a></li>
                <li><input type="button" class="next" value="다음 페이지"></li>
                <li><input type="button" class="last" value="끝 페이지" /></li>
            </ul>
        </div>
    </div><!-- page_num_wrap//-->


</div><!--sub_rightwrap//-->