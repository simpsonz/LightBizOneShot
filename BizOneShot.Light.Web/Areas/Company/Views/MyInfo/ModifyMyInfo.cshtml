        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb1').addClass('on');

        //Email 항목선택시 처리
        $('#EMAIL_DOMAIN').bind('change', function () {
            if ($(this).val() == "") {
                $('#Email2').show("slow");
                $('#Email2').val('');
            } else {
                $('#Email2').hide("slow");
                $('#Email2').val($(this).val());
            }
            return false;
        });
    });

    function open_post() {
        w = 550;    //팝업창의 너비
        h = 485;    //팝업창의 높이
        //중앙위치 구해오기
