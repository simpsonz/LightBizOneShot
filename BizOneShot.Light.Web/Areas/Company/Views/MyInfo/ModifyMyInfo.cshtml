        TopPosition = (screen.height - h) / 2;
        var popUp = window.open('/Home/zipSearchPopup', 'zipSearchPopup', "width=" + w + ",height=" + h + ",top=" + TopPosition + ",left=" + LeftPosition + ", scrollbars=no, resizable=no");
        popUp.focus();
    }

    function resultReceive(zip, address) {
        $('#POST_NO').val(zip);
        $('#ADDR_1').val(address);
    }

</script>

